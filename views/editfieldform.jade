div#edit-rent.modal.fade(tabindex="-1", role="dialog", aria-labelledby="edit-rent-label", aria-hidden="true")
	div.modal-dialog
		div.modal-content
			div.modal-header
				button.close(type="button", data-dismiss="modal")
					span(aria-hidden="true") &times;
					span.sr-only Close
				h4#edit-rent-label.modal-title Edit rent
			div.modal-body
				form.form-horizontal(method="post", action="/editlist")
					if list.type === 'flat'
						div.form-group
							label.col-md-2.control-label Rent*
							div.col-md-4
								input.form-control(type="number", placeholder="Rent", name="rent0", value=list.rent[0].rent, min="0" required)
							div.col-md-6
								if list.rent[0].rentType === 'yearly'
									label.radio-inline
										input(type="radio", name="rentType0", value="yearly" checked)
										|  Yearly
									label.radio-inline
										input(type="radio", name="rentType0", value="monthly")
										|  Monthly
								else
									label.radio-inline
										input(type="radio", name="rentType0", value="yearly")
										|  Yearly
									label.radio-inline
										input(type="radio", name="rentType0", value="monthly" checked)
										|  Monthly
					else
						div.form-group
							label.col-md-2.control-label Type*
							-for (var i=1 ; i<=6 ; ++i) {
								div.col-md-3
									label.checkbox-inline 
									input(type="checkbox", value='seater#{i}')
									|  #{i} seater
							-}
						-for (var i=1 ; i<=6 ; ++i) {
							div.form-group.display-none(class="seater#{i}")
								label.col-md-2.control-label Rent (#{i} seater)*
								div.col-md-4
									input.form-control.input(type="number", placeholder="Rent(Rs.)", name="rent#{i}", min="0")
								div.col-md-6
									label.radio-inline
										input(type="radio", name="rentType#{i}", value="yearly" checked)
										|  Yearly
									label.radio-inline
										input(type="radio", name="rentType#{i}", value="monthly")
										|  Monthly
						-}
					div.modal-footer
						button.btn.btn-default.btn-flat(type="button", data-dismiss="modal") Close
						button.btn.btn-success.btn-flat(type="submit") Submit

