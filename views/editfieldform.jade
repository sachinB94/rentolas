div#edit-description.modal.fade(tabindex="-1", role="dialog", aria-labelledby="edit-description-label", aria-hidden="true")
	div.modal-dialog
		div.modal-content
			div.modal-header
				button.close(type="button", data-dismiss="modal")
					span(aria-hidden="true") &times;
					span.sr-only Close
				h4#edit-description-label.modal-title Edit description
			div.modal-body
				form.form-horizontal(method="post", action="/editlist")
					div.form-group
						label.col-md-2.control-label Furnishing
						div.col-md-10
							if list.furnishing == 'furnished'
								label.radio-inline
									input(type="radio", name="furnishing", value="furnished" checked)
									|  furnished
								label.radio-inline
									input(type="radio", name="furnishing", value="semi-furnished")
									|  semi-furnished
								label.radio-inline
									input(type="radio", name="furnishing", value="unfurnished")
									|  unfurnished
							else if list.furnishing == 'semi-furnished'
								label.radio-inline
									input(type="radio", name="furnishing", value="furnished" checked)
									|  furnished
								label.radio-inline
									input(type="radio", name="furnishing", value="semi-furnished" checked)
									|  semi-furnished
								label.radio-inline
									input(type="radio", name="furnishing", value="unfurnished")
									|  unfurnished
							else
								label.radio-inline
									input(type="radio", name="furnishing", value="furnished" checked)
									|  furnished
								label.radio-inline
									input(type="radio", name="furnishing", value="semi-furnished")
									|  semi-furnished
								label.radio-inline
									input(type="radio", name="furnishing", value="unfurnished" checked)
									|  unfurnished
					div.form-group
						label.col-md-2.control-label Bathrooms
						div.col-md-7
							input.form-control(type="number", placeholder="Number of Bathrooms", name="noBathroom", value=list.noBathroom, min="0" required)
						div.col-md-3
							label.checkbox-inline
							if list['attachedBathroom'] == 1
								input(type="checkbox", name="attachedBathroom", value='1' checked)
							else
								input(type="checkbox", name="attachedBathroom", value='1')
							|  Attached
					div.form-group
						label.col-md-2.control-label Floor
						div.col-md-10
							input.form-control(type="number", placeholder="(Ground = 0)", name="floor", value=list['floor'], min="0")
					div.form-group
						label.col-md-2.control-label Amenities
						div.col-md-10
							label.checkbox-inline
								if list.amenities.indexOf('bed') != -1
									input(type="checkbox", name="amenities", value="bed" checked)
								else
									input(type="checkbox", name="amenities", value="bed")
								|  bed
							label.checkbox-inline
								if list.amenities.indexOf('refrigerator') != -1
									input(type="checkbox", name="amenities", value="refrigerator" checked)
								else
									input(type="checkbox", name="amenities", value="refrigerator")
								|  refrigerator
							label.checkbox-inline
								if list.amenities.indexOf('parking') != -1
									input(type="checkbox", name="amenities", value="parking" checked)
								else
									input(type="checkbox", name="amenities", value="parking")
								|  parking
							label.checkbox-inline
								if list.amenities.indexOf('gas') != -1
									input(type="checkbox", name="amenities", value="gas" checked)
								else
									input(type="checkbox", name="amenities", value="gas")
								|  gas
							label.checkbox-inline
								if list.amenities.indexOf('tv') != -1
									input(type="checkbox", name="amenities", value="tv" checked)
								else
									input(type="checkbox", name="amenities", value="tv")
								|  TV
					div.form-group
						label.col-md-2.control-label Description
						div.col-md-10
							textarea.form-control(rows="3", maxlength="200", placeholder="(max characters: 200)", name="description") #{list.description}
					div.modal-footer
						button.btn.btn-default.btn-flat(type="button", data-dismiss="modal") Close
						button.btn.btn-success.btn-flat(type="submit") Submit

